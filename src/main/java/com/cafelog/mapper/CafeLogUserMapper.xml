<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cafelog.mapper.CafeLogUserMapper">

    <select id="findById" resultType="com.cafelog.entity.CafeLogUser">
        select 
            user_id,
            name,
            email
        from 
            users 
        where 
            user_id = #{userId}
    </select>
    <select id="findByEmail" resultType="com.cafelog.entity.CafeLogUser">
        select 
            user_id,
            name,
            email
        from 
            users
        where 
            email = #{email}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="userId">
        insert into CafeLogUser (
            name, 
            email
        ) 
        values (
            #{name}, 
            #{email}
        )
    </insert>
    <update id="update">
        update users 
        set 
            name = #{name}, 
            email = #{email}
        where 
            user_id = #{user_id}
    </update>
    <delete id="delete">
        delete 
        from 
            users 
        where 
            user_id = #{user_id}
    </delete>

    
</mapper>